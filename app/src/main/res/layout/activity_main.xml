<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrounblue"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="@dimen/dimens_16"
                android:layout_marginTop="@dimen/dimens_16"
                android:layout_marginRight="@dimen/dimens_16"
                android:background="@drawable/mine_login_bg"
                android:orientation="horizontal" />


            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="@dimen/dimens_16"
                android:layout_marginTop="@dimen/dimens_26"
                android:layout_marginRight="@dimen/dimens_16"
                android:background="@drawable/home_model_rl_bg">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="My Collection"
                    android:textColor="@color/splash_text_color"
                    android:textSize="24dp" />


            </RelativeLayout>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="333dp"
                android:layout_marginLeft="@dimen/dimens_16"
                android:layout_marginTop="@dimen/dimens_16"
                android:layout_marginRight="@dimen/dimens_16"
                android:background="@drawable/home_material_rl_bg">


                <ImageView

                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_centerInParent="true"

                    android:src="@drawable/daco" />
            </RelativeLayout>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="@dimen/dimens_16"
                android:layout_marginTop="@dimen/dimens_16"
                android:layout_marginRight="@dimen/dimens_16"
                android:background="@drawable/home_material_rl_bg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimens_16"
                    android:layout_marginTop="@dimen/dimens_16"
                    android:layout_marginRight="@dimen/dimens_16"
                    android:background="@drawable/mine_login_bg"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"

                        android:background="@drawable/rounded_corner"
                        android:onClick="loadModel"
                        android:text="Show"
                        android:textColor="#000000" />

                    <Button
                        android:id="@+id/button3"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"

                        android:background="@drawable/rounded_corner"
                        android:onClick="uploadModel"
                        android:text="Create"
                        android:textColor="#000000" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimens_16"
                    android:layout_marginTop="@dimen/dimens_64"
                    android:layout_marginRight="@dimen/dimens_16"

                     android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView

                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"

                        android:src="@drawable/model3dimg2" />

                    <ImageView

                        android:layout_width="147dp"
                        android:layout_height="@dimen/dimens_45sp"

                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/model3dimg" />
                </LinearLayout>
            </RelativeLayout>


        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>